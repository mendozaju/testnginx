worker_processes 1;
daemon off;

events {
  worker_connections 1024;
}

http {
  include mime.types;
  default_type application/octet-stream;

  sendfile on;
  keepalive_timeout 65;

  server {
    listen <%= ENV['PORT'] %>;
    server_name localhost;

    error_page 404 /404.html;

    location / {
      root www;
      expires 180s;
      add_header Vary Accept-Encoding;
    }
  }

}
